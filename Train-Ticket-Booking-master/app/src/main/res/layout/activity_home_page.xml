<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fashkl.project.HomePage">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#191826"
        android:scaleType="fitXY" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#2a20b0">

        <TextView
            android:id="@+id/detailHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6F839A"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Local Train Ticketing System"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="163dp"
            android:layout_height="70dp"
            android:layout_below="@+id/detailHeader"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="126dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="114dp"
            android:layout_marginBottom="82dp"
            android:background="@android:color/background_light"
            android:backgroundTint="@drawable/button"
            android:text="Welcome"
            android:textColor="#2A20B0"
            android:textSize="34sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
