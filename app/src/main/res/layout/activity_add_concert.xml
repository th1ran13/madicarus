<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_addConcert"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@drawable/gradiant_background">

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/concert" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="@string/et_name" />

    <EditText
        android:id="@+id/et_ticketType"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="@string/et_ticketType" />

    <TextView
        android:id="@+id/tv_type1"
        android:layout_width="238dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:layout_height="39dp"
        android:text="@string/tv_type1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_type2"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="@string/tv_type2"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_type3"
        android:layout_width="238dp"
        android:layout_height="39dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="8dp"
        android:text="@string/tv_type3"
        android:textColor="@color/white"
        android:textSize="20sp" />



    <EditText
        android:id="@+id/et_ticketCount"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="@string/et_ticketCount" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="45dp"
        android:text="Add Concert"
        android:textStyle="bold"
        android:background="@drawable/common_btn"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="3dp"
        android:textColor="#212121" />

    <Button
        android:id="@+id/btn_open"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="45dp"
        android:background="@drawable/common_btn"
        android:text="View"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:textColor="#212121"/>




</LinearLayout>
